rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isOrganizer() {
      return request.auth.token.role == 'organizer' || isAdmin();
    }

    // Validate image uploads
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB max
    }

    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf') &&
             request.resource.size < 25 * 1024 * 1024; // 25MB max
    }

    // ============================================
    // USER AVATARS
    // ============================================
    match /users/{userId}/avatar/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId) && isValidImage();
      allow delete: if isOwner(userId) || isAdmin();
    }

    // ============================================
    // EVENT IMAGES
    // ============================================
    match /events/{eventId}/cover/{fileName} {
      allow read: if true;
      allow write: if isOrganizer() && isValidImage();
      allow delete: if isOrganizer() || isAdmin();
    }

    match /events/{eventId}/gallery/{fileName} {
      allow read: if true;
      allow write: if isOrganizer() && isValidImage();
      allow delete: if isOrganizer() || isAdmin();
    }

    // ============================================
    // ORGANIZATION ASSETS
    // ============================================
    match /organizations/{orgId}/logo/{fileName} {
      allow read: if true;
      allow write: if isOrganizer() && isValidImage();
      allow delete: if isOrganizer() || isAdmin();
    }

    match /organizations/{orgId}/documents/{fileName} {
      allow read: if isOrganizer() || isAdmin();
      allow write: if isOrganizer() && isValidDocument();
      allow delete: if isOrganizer() || isAdmin();
    }

    // ============================================
    // QR CODES (Generated by Cloud Functions)
    // ============================================
    match /qrcodes/{ticketId}/{fileName} {
      allow read: if isAuthenticated();
      // Only Cloud Functions can write QR codes
      allow write: if false;
    }

    // ============================================
    // SYSTEM ASSETS (Admin only)
    // ============================================
    match /system/{path=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ============================================
    // TEMPORARY UPLOADS
    // ============================================
    match /temp/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && request.resource.size < 50 * 1024 * 1024;
      allow delete: if isOwner(userId) || isAdmin();
    }
  }
}
